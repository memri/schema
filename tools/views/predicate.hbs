<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    {{#each pathLinks as |pathLink|}}
      <li class="breadcrumb-item"><a href="/{{pathLink}}">{{@key}}</a></li>
    {{/each}}
  </ol>
</nav>
<p><i>{{lookup (lookup predicateHierarchy name) 'description'}}</i></p>

{{#if (lookup (lookup predicateHierarchy name) 'type')}}
  <h4>Type: <a href="/{{lookup (lookup entityHierarchy (lookup (lookup predicateHierarchy name) 'type')) 'path'}}">
    {{lookup (lookup predicateHierarchy name) 'type'}}</a>
  </h4><br/>
{{/if}}

{{#if (lookup (lookup predicateHierarchy name) 'children')}}
  <h4>Child nodes:</h4>
  <ul class="list-group">
    {{#each (lookup (lookup predicateHierarchy name) 'children') as |child|}}
      <li class="list-group-item">
        <a href="{{../name}}/{{child}}">{{child}}</a>
      </li>
    {{/each}}
  </ul>
{{/if}}